{
    "name": "sje-utilities-developer",
    "build": {
        "dockerfile": "devcontainer.dockerfile",
        "args": {
            "VARIANT": "bookworm"
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/aws-cli:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/docker-in-docker:2.10.2": "latest",
        "ghcr.io/devcontainers/features/git:1.2.0": "os-provided",
        "ghcr.io/guiyomh/features/just:0": {
            "version": "1.25.2"
        },
        "ghcr.io/devcontainers/features/python:1.4.2": "3.12.2",
        "ghcr.io/devcontainers-contrib/features/pre-commit:2": {
            "version": "3.6.2"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "AquaSecurityOfficial.trivy-vulnerability-scanner",
                "davidanson.vscode-markdownlint",
                "EditorConfig.EditorConfig",
                "redhat.vscode-yaml",
                "timonwong.shellcheck"
            ]
        }
    },
    "containerUser": "vscode",
    "postCreateCommand": "just bootstrap",
    "runArgs": [
        "--userns=keep-id",
        "--env-file",
        ".devcontainer/devcontainer.env"
    ],
    "mounts": [
        "source=${env:HOME}/.aws,target=/home/vscode/.aws,type=bind"
    ]
}
