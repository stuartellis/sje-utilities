{
  "name": "sje-utilities",
  "version": "1.0.0",
  "description": "Tools and experiments",
  "scripts": {
    "ansible:lint": "ansible-lint -qq ansible/**/*.yaml",
    "cfn:lint": "cfn-lint --include-checks I -t cloudformation/**/*.yml",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stuartellis/sje-utilities.git"
  },
  "keywords": [
    "tools"
  ],
  "author": "Stuart Ellis <stuart@stuartellis.name>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stuartellis/sje-utilities/issues"
  },
  "homepage": "https://github.com/stuartellis/sje-utilities#readme",
  "lint-staged": {
    "ansible/**/*.{yml,yaml}": "ansible-lint -qq",
    "arm/**/*.json": "jsonlint -cq",
    "cloudformation/**/*.json": "jsonlint -cq",
    "cloudformation/**/*.{yml,yaml}": "cfn-lint --include-checks I -t"
  },
  "devDependencies": {
    "husky": "^7.0.0",
    "jsonlint": "^1.6.3",
    "lint-staged": "^11.1.2"
  }
}